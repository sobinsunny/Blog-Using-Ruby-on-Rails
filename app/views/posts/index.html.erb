<h1>Listing posts</h1>
 <%= stylesheet_link_tag 'scaffold' %>
  <table class="table">
                      <tr class="active">
                        <th>Name</th>
                        <th>Title</th>
                        <th>Content</th>
                      </tr>

                    <% @posts.each do |post| %>
                            <tr class="danger">
                            <td><%=h post.name %></td>
                            <td><%=h post.title %></td>
                            <td><%=h post.content %></td>
                            <td><%= link_to 'Show', post %></td>
                            <td><%= link_to 'Edit', edit_post_path(post) %></td>
                            <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
                            </tr>
                            <tr class="danger">
                            </tr>
                        <% end %>
                    </table>
                    <br/>
<%= link_to 'New post', :controller=>'posts',:action=>"new",:id=>@user.id%>